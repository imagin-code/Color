<?xml version="1.0" encoding="utf-8"?>
<Layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="Imagin.Core.Controls">
  <Root xsi:type="DockLayoutGroup" Orientation="Horizontal">
    <Elements>
      <Element xsi:type="DockLayoutDocumentGroup" Width="6*"/>
      <Element xsi:type="DockLayoutGroup" Orientation="Horizontal" Width="1*">
        <Elements>
          <Element xsi:type="DockLayoutPanelGroup" Width="5*">
            <Panels>
              <DockLayoutPanel IsSelected="true" Name="ComponentPanel"/>
            </Panels>
          </Element>
          <Element xsi:type="DockLayoutPanelGroup" Width="5*">
            <Panels>
              <DockLayoutPanel IsSelected="true" Name="AlphaPanel"/>
            </Panels>
          </Element>
        </Elements>
      </Element>
      <Element xsi:type="DockLayoutPanelGroup" Width="3*">
        <Panels>
          <DockLayoutPanel IsSelected="true" Name="PropertiesPanel"/>
          <DockLayoutPanel Name="ColorsPanel"/>
          <DockLayoutPanel Name="OptionsPanel"/>
        </Panels>
      </Element>
    </Elements>
  </Root>
</Layout>